{
  "manifest_version": 2,

  "name": "WebPass",
  "description": "Web Extensions for zx2c4's pass",
  "version": "0.1",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+L"
      }
    }
  },
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ]
}
